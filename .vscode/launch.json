{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Project",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli/cli.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Attach to Debugpy",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      }
    }
  ]
}
